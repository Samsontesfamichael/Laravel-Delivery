# Laravel Delivery - Docker Environment Configuration
# Copy this to .env and update values as needed

# Application
APP_NAME="Laravel Delivery"
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_delivery
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@laravel-delivery.test
MAIL_FROM_NAME="${APP_NAME}"

# N8N Webhook URLs
N8N_WEBHOOK_URL=http://n8n:5678
N8N_WEBHOOK_SECRET=your_webhook_secret

# WhatsApp Configuration (Venom)
WHATSAPP_ENABLED=true
WHATSAPP_API_URL=http://venom:3000
WHATSAPP_SESSION_NAME=laravel_delivery

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Gateways
STRIPE_KEY=sk_test_your_stripe_key
STRIPE_SECRET=sk_test_your_stripe_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_bucket_name
